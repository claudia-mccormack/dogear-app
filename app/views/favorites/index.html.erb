<h1>Your Favorites:</h1>
<div class="row-favorites-index">
  <% @favorites.each do |favorite| %>
  <div class="col-md-4 well">
    <%= favorite.book.title %> <br>
    <a href="/books/<%= favorite.book.id %>"><img src="<%= favorite.book.cover %>" alt=""></a><br>

      <% if favorite.finished == false %>
    <%= link_to "Finished Reading!", "/favorites?book_id=#{favorite.book.id}&user_id=#{current_user.id}", method: "patch" %>
      <% end %> <br>
    <%= link_to "Remove from Favorites", "/favorites?book_id=#{favorite.book.id}&user_id=#{current_user.id}", method: "delete" %>

    </div>
  <% end %>
</div>

<%= link_to "View All Books", "/" %>
